{
  "_comment": "REST mode node configuration for MCP server",
  "_rune_permissions": [
    "Required methods for full functionality:",
    "- getinfo: node identity",
    "- listfunds: on-chain balance",
    "- listpeerchannels: channel data",
    "- setchannel: fee adjustments",
    "- feerates: on-chain fee estimates",
    "- listnodes: peer intelligence (network graph)",
    "- listchannels: peer intelligence (channel analysis)",
    "- listpeers: peer intelligence (existing connections)",
    "- hive-*: all hive plugin methods",
    "- revenue-*: all revenue-ops methods (optional)"
  ],
  "mode": "rest",
  "nodes": [
    {
      "name": "node1",
      "rest_url": "https://node1.example.com:3001",
      "rune": "your-rune-from-createrune-command",
      "ca_cert": "/path/to/node1/ca.pem"
    },
    {
      "name": "node2",
      "rest_url": "https://node2.example.com:3001",
      "rune": "your-rune-from-createrune-command",
      "ca_cert": "/path/to/node2/ca.pem"
    }
  ]
}
